<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="
                        http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20240928" author="ayush.pattanayak">
        <createTable tableName="USER_FACT" schemaName="redcloud">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="user_id_pk" nullable="true"/>
            </column>
            <column name="first_name" type="VARCHAR(155)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="VARCHAR(155)">
                <constraints nullable="true"/>
            </column>
            <column name="username" type="VARCHAR(155)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="VARCHAR(155)">
                <constraints nullable="true"/>
            </column>
            <column name="gender" type="VARCHAR(10)">
                <constraints nullable="true"/>
            </column>
            <column name="user_state" type="VARCHAR(30)">
                <constraints nullable="true"/>
            </column>
            <column name="user_login_time" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="refresh_duration" type="INT">
                <constraints nullable="true"/>
            </column>
            <column name="token" type="VARCHAR(155)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>